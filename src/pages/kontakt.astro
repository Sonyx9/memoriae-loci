---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const siteUrl = 'https://memoriaeloci.cz';

const jsonLd = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'BreadcrumbList',
      '@id': `${siteUrl}/kontakt/#breadcrumbs`,
      itemListElement: [
        { '@type': 'ListItem', position: 1, name: 'Memoriae Loci', item: `${siteUrl}/` },
        { '@type': 'ListItem', position: 2, name: 'Kontakt', item: `${siteUrl}/kontakt` },
      ],
    },
    {
      '@type': 'ContactPage',
      '@id': `${siteUrl}/kontakt/#contactpage`,
      url: `${siteUrl}/kontakt`,
      name: 'Kontakt – Memoriae Loci',
      description: 'Kontaktní stránka neziskové organizace Memoriae Loci působící v Liberci. Dotazy k projektům, spolupráci a podpoře paměti místa.',
      inLanguage: 'cs-CZ',
      isPartOf: { '@id': `${siteUrl}/#website` },
      about: { '@id': `${siteUrl}/#organization` },
      breadcrumb: { '@id': `${siteUrl}/kontakt/#breadcrumbs` },
      mainEntity: {
        '@type': 'Organization',
        '@id': `${siteUrl}/#organization`,
        name: 'Memoriae Loci, z.ú.',
        email: 'info@memoriaeloci.cz',
        telephone: '+420775347915',
        areaServed: { '@type': 'City', name: 'Liberec' },
      },
    },
  ],
};
---

<BaseLayout 
  title="Kontakt | Memoriae Loci – Paměť místa v Liberci"
  description="Kontaktujte Memoriae Loci v Liberci. Napište nám k projektům, spolupráci, médiím nebo podpoře paměti místa a kulturního dědictví."
  image={`${siteUrl}/images/logo-footer.png`}
  ogTitle="Kontakt – Memoriae Loci (Liberec)"
  ogDescription="Kontaktní údaje neziskové organizace Memoriae Loci. Ozvěte se nám k projektům, spolupráci nebo podpoře paměti místa."
  ogImageAlt="Kontakt Memoriae Loci – Paměť místa, Liberec"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    <meta property="og:site_name" content="Memoriae Loci – Paměť místa" />
    <meta property="og:locale" content="cs_CZ" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="Kontakt | Memoriae Loci" />
    <meta name="twitter:description" content="Kontaktní údaje Memoriae Loci – neziskové organizace pro paměť místa v Liberci." />
    <meta name="twitter:image" content="https://memoriaeloci.cz/images/logo-footer.png" />
  </Fragment>
  <Navigation />
  
  <main class="pt-16 min-h-screen">
    <!-- Hero -->
    <section class="bg-slate-900 py-20">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-5xl md:text-6xl font-bold text-slate-50 mb-6">Kontakt</h1>
        <p class="text-xl text-slate-300 max-w-2xl">
          Máte nápad, otázku nebo projekt? Dejte nám vědět, rádi si o tom popovídáme.
        </p>
      </div>
    </section>
    
    <!-- Contact Information -->
    <section class="bg-slate-950 pt-20 pb-0">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Email and Phone -->
        <div class="mb-8 grid grid-cols-1 sm:grid-cols-2 gap-4">
          <!-- Email Box - Primary Contact -->
          <a 
            href="mailto:info@memoriaeloci.cz" 
            class="bg-slate-900 p-8 rounded-lg border-2 border-accent/30 hover:border-accent transition-all group flex items-center gap-5 shadow-lg shadow-accent/10"
          >
            <div class="flex-shrink-0 w-16 h-16 bg-accent/20 rounded-lg flex items-center justify-center group-hover:bg-accent/30 transition-colors">
              <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <p class="text-slate-400 text-sm mb-1 font-medium">Email</p>
              <p class="text-slate-50 font-semibold text-lg group-hover:text-accent transition-colors">
                info@memoriaeloci.cz
              </p>
            </div>
          </a>
          
          <!-- Phone Box -->
          <a 
            href="tel:+420775347915" 
            class="bg-slate-900 p-6 rounded-lg border border-slate-700 hover:border-slate-600 transition-all group flex items-center gap-4"
          >
            <div class="flex-shrink-0 w-12 h-12 bg-slate-800 rounded-lg flex items-center justify-center group-hover:bg-slate-700 transition-colors">
              <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div>
              <p class="text-slate-500 text-sm mb-1">Telefon</p>
              <p class="text-slate-300 font-medium group-hover:text-slate-200 transition-colors">
                +420 775 347 915
              </p>
            </div>
          </a>
        </div>
        
        <!-- Organization Info and Contact Emails -->
        <div class="bg-slate-900 p-8 rounded-lg">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 mb-6">
              <div class="flex items-center gap-3">
                <h2 class="text-2xl font-bold text-slate-50">Memoriae Loci, z.ú.</h2>
                <img 
                  src="/images/logo-footer.png" 
                  alt="Memoriae Loci"
                  class="h-8 w-auto brightness-0 invert"
                />
              </div>
              <h2 class="text-2xl font-bold text-slate-50">Kontaktní údaje</h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
              <!-- Organization Details -->
              <div class="space-y-3 text-slate-300">
                <p>Nezisková organizace</p>
                <p>Právní forma: Zapsaný ústav</p>
                <p>Mlýnská 602/31,<br />46001 Liberec</p>
                <p>IČO: 21168415</p>
                <p>U 257/KSUL Krajský soud v Ústí nad Labem</p>
              </div>
              
              <!-- Contact Emails -->
              <div class="space-y-6">
                <div>
                  <p class="text-slate-400 text-sm mb-1">Obecný kontakt</p>
                  <p>
                    <a href="mailto:info@memoriaeloci.cz" class="text-accent hover:text-accent-light transition-colors">
                      info@memoriaeloci.cz
                    </a>
                  </p>
                </div>
                
                <div>
                  <h3 class="text-lg font-semibold text-slate-50 mb-2">
                    Kontakt pro vystavení dokladu o daru a možnost spolupráce
                  </h3>
                  <p class="text-slate-300 mb-2">Bc. Radek Moťka – ředitel Memoriae Loci, z.ú.</p>
                  <p>
                    <a href="mailto:radek.motka@memoriaeloci.cz" class="text-accent hover:text-accent-light transition-colors">
                      radek.motka@memoriaeloci.cz
                    </a>
                  </p>
                </div>
                
                <div>
                  <h3 class="text-lg font-semibold text-slate-50 mb-2">
                    Mediální zastoupení, eventy a marketing
                  </h3>
                  <p class="text-slate-300 mb-2">Mgr. Lukáš Koula – předseda správní rady Memoriae Loci, z.ú.</p>
                  <p>
                    <a href="mailto:lukas.koula@memoriaeloci.cz" class="text-accent hover:text-accent-light transition-colors">
                      lukas.koula@memoriaeloci.cz
                    </a>
                  </p>
                </div>
              </div>
            </div>
          </div>
      </div>
    </section>
    
    <!-- Podpořte nás -->
    <section class="bg-slate-950 pt-10 pb-20">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Podpořte nás -->
        <div class="bg-slate-800 rounded-lg overflow-hidden border border-slate-700 hover:border-accent/50 transition-all group">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-0">
            <div class="aspect-video md:aspect-auto bg-slate-700 relative overflow-hidden">
              <img 
                src="/images/podporte-nas.webp" 
                alt="Historický soudní proces s obviněným stojícím před soudem, kolem něj soudci a diváci"
                title="Historický soudní proces v soudní síni"
                data-description="Černobílý snímek z historického soudního procesu. Obviněný stojí před soudem, zatímco soudci a diváci sledují. Na stěně je obraz významné historické osobnosti."
                class="w-full h-full object-cover"
              />
              <div class="absolute inset-0 bg-slate-950/50"></div>
            </div>
            <div class="p-8 flex flex-col justify-center">
              <h3 class="text-2xl md:text-3xl font-bold text-slate-50 mb-4 group-hover:text-accent transition-colors">
                Vaše podpora má smysl
              </h3>
              <p class="text-slate-300 text-base mb-6 leading-relaxed">
                Každý příspěvek pomáhá zachovat příběhy, které by jinak zmizely. Děkujeme, že jste s námi.
              </p>
              
              <!-- Bank Account Info -->
              <div class="space-y-4 mb-6">
                <div>
                  <div class="text-xs uppercase tracking-wide text-slate-400 mb-2">Č. účtu</div>
                  <div class="flex items-center gap-3">
                    <code class="text-base font-mono text-slate-50 bg-slate-900/50 px-3 py-1.5 rounded border border-slate-700">384868895/0600</code>
                    <button 
                      id="copy-account-btn-kontakt"
                      class="text-slate-400 hover:text-accent transition-colors p-1.5"
                      aria-label="Kopírovat číslo účtu"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                      </svg>
                    </button>
                  </div>
                </div>
                
                <div>
                  <div class="text-xs uppercase tracking-wide text-slate-400 mb-2">IBAN</div>
                  <div class="overflow-x-auto -mx-1 px-1">
                    <code class="inline-block text-sm sm:text-base font-mono text-slate-50 bg-slate-900/50 px-3 py-1.5 rounded border border-slate-700 whitespace-nowrap min-w-0">CZ84 0600 0000 0003 8486 8895</code>
                  </div>
                </div>
                
                <div>
                  <div class="text-xs uppercase tracking-wide text-slate-400 mb-2">BIC</div>
                  <code class="text-base font-mono text-slate-50 bg-slate-900/50 px-3 py-1.5 rounded border border-slate-700">AGBACZPP</code>
                </div>
              </div>
              
              <a 
                href="/podporte-nas" 
                class="inline-flex items-center text-accent text-sm font-semibold hover:underline w-fit"
              >
                Více informací o podpoře →
              </a>
            </div>
            <div class="p-8 flex flex-col justify-center items-center border-t md:border-t-0 md:border-l border-slate-700">
              <div class="text-xs uppercase tracking-wide text-slate-400 mb-3 text-center">QR platba</div>
              <img 
                src="/images/qr-platba.jpg" 
                alt="QR platba"
                class="w-48 h-48 bg-white p-2 rounded-lg"
              />
              <p class="text-slate-400 text-xs text-center mt-3 max-w-[12rem]">Na vyžádání vystavíme potvrzení o daru</p>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Podporují nás – stejný blok jako na Podpořte nás -->
    <section class="relative py-20 bg-slate-950 border-t border-slate-800">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div>
          <div class="mb-10">
            <h2 class="text-3xl md:text-4xl font-bold text-slate-50 mb-3">Podporují nás</h2>
            <p class="text-slate-400 max-w-2xl">
              Děkujeme všem dárcům a podporovatelům, kteří nám pomáhají naplňovat poslání. Každý příspěvek – finanční i lidský – s námi počítá.
            </p>
          </div>
          <div class="bg-slate-800/60 rounded-2xl border border-slate-700 p-8 md:p-10">
            <p class="text-slate-400 text-sm md:text-base">
              Zde v budoucnu mohou být jména nebo loga podporovatelů, kteří s tím souhlasí.
            </p>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Partneři vybraných akcí Section -->
    <section class="relative py-16 bg-slate-950">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl">
          <h2 class="text-2xl md:text-3xl font-bold text-slate-50 mb-8 uppercase tracking-wide">
            Partneři vybraných akcí
          </h2>
          <div class="flex flex-wrap items-center gap-8 md:gap-12">
            <!-- Liberecký kraj logo -->
            <a 
              href="https://www.kraj-lbc.cz" 
              target="_blank"
              rel="noopener noreferrer"
              class="hover:opacity-80 transition-opacity"
            >
              <img 
                src="/images/logo-liberecky-kraj.png" 
                alt="Liberecký kraj"
                class="h-12 brightness-0 invert opacity-80 hover:opacity-100 transition-opacity"
              />
            </a>
            <!-- Krajská vědecká knihovna v Liberci logo -->
            <a 
              href="https://www.kvkli.cz" 
              target="_blank"
              rel="noopener noreferrer"
              class="hover:opacity-80 transition-opacity"
            >
              <img 
                src="/images/logo-kvkli.svg" 
                alt="Krajská vědecká knihovna v Liberci"
                class="h-12 opacity-80 hover:opacity-100 transition-opacity"
              />
            </a>
            <!-- FP TUL logo -->
            <a 
              href="https://www.fp.tul.cz" 
              target="_blank"
              rel="noopener noreferrer"
              class="hover:opacity-80 transition-opacity"
            >
              <img 
                src="https://www.fp.tul.cz/templates/yootheme/cache/d8/FP-znacka-d8bb453b.png" 
                alt="Fakulta přírodovědně-humanitní a pedagogická TUL"
                class="h-12 brightness-0 invert opacity-80 hover:opacity-100 transition-opacity"
              />
            </a>
            <!-- Academia logo -->
            <a 
              href="https://www.academiaknihy.cz" 
              target="_blank"
              rel="noopener noreferrer"
              class="hover:opacity-80 transition-opacity"
            >
              <img 
                src="https://www.academiaknihy.cz/public/dist/images/header-logo-cz--inverse.svg" 
                alt="Nakladatelství Academia"
                class="h-12 opacity-80 hover:opacity-100 transition-opacity"
              />
            </a>
            <!-- Liberecký kraj logo (bílé) -->
            <a 
              href="https://www.kraj-lbc.cz" 
              target="_blank"
              rel="noopener noreferrer"
              class="hover:opacity-80 transition-opacity"
            >
              <img 
                src="/images/logo-liberecky-kraj-6-bile.png" 
                alt="Liberecký kraj"
                class="h-20 opacity-80 hover:opacity-100 transition-opacity"
              />
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<script>
  // Copy account number functionality
  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', () => {
      const copyBtn = document.getElementById('copy-account-btn-kontakt');
      if (copyBtn) {
        copyBtn.addEventListener('click', () => {
          navigator.clipboard.writeText('384868895/0600').then(() => {
            const originalHTML = copyBtn.innerHTML;
            copyBtn.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>';
            copyBtn.classList.add('text-accent');
            setTimeout(() => {
              copyBtn.innerHTML = originalHTML;
              copyBtn.classList.remove('text-accent');
            }, 2000);
          });
        });
      }
    });
  }
</script>
