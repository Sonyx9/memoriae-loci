---
import { formatDate } from '../../lib/utils';
import { projects } from '../../lib/projects';

interface Props {
  title: string;
  excerpt?: string;
  publishedAt: string;
  project?: string;
  tags?: string[];
  readingTime?: number;
  author?: string;
  sources?: string[];
  /** Text tlačítka místo „Debata“ (např. „Poslechnout si rozhovor“) */
  debataLabel?: string;
}

const { title, excerpt, publishedAt, project, tags = [], readingTime, author, sources = [], debataLabel = 'Debata' } = Astro.props;
const projectData = project ? projects.find(p => p.slug === project) : null;
---

<div class="p-6 md:p-8 lg:p-10 lg:pt-12 article-panel">
  <!-- Header -->
  <header class="mb-6 lg:mb-8">
    <h1 class="text-2xl md:text-3xl lg:text-4xl font-serif text-slate-100 leading-tight mb-4 font-bold">
      {title}
    </h1>
    
    {excerpt && (
      <p class="text-sm md:text-base lg:text-base text-slate-300 leading-snug mb-5 max-w-3xl font-light line-clamp-4 lg:line-clamp-5">
        {excerpt}
      </p>
    )}
    
    <!-- Meta Info -->
    <div class="space-y-2 mb-6">
      <div class="text-[11px] uppercase tracking-wider text-slate-400 font-light">
        <time datetime={publishedAt}>{formatDate(publishedAt)}</time>
        {readingTime && (
          <>
            <span class="mx-1.5">•</span>
            <span>{readingTime} min čtení</span>
          </>
        )}
      </div>
      
      {author && (
        <div class="text-xs text-slate-300 font-light">
          <span class="text-slate-400 mr-1.5">Autor:</span>
          {author}
        </div>
      )}
      
      {projectData && (
        <div class="text-[11px] uppercase tracking-wider text-slate-400 font-light">
          <a 
            href={`/projekty/${projectData.slug}`}
            class="text-accent hover:text-accent-light transition-colors underline decoration-accent/30 hover:decoration-accent"
          >
            {projectData.name}
          </a>
        </div>
      )}
      
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-1.5 pt-1.5">
          {tags.map(tag => (
            <span class="px-2 py-1 bg-slate-800/30 border border-slate-700/50 text-slate-300 rounded text-[11px] uppercase tracking-wider font-light hover:border-slate-600 transition-colors">
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>
  </header>
  
  <!-- Footer CTA: na mobilu jen Podpořte nás, na desktopu všechna tlačítka -->
  <div class="mt-8 pt-6 border-t border-white/10">
    <div class="flex flex-col gap-2">
      <div class="hidden sm:flex flex-col sm:flex-row gap-2">
        <button 
          id="read-article-btn"
          class="flex-1 px-4 py-2.5 text-xs uppercase tracking-wider text-slate-50 bg-accent hover:bg-accent-light transition-all font-semibold rounded-lg"
        >
          Číst
        </button>
        <a 
          href="#article-video-infographic-section" 
          class="flex-1 text-center px-4 py-2.5 text-xs uppercase tracking-wider text-slate-300 border border-slate-700/50 hover:border-accent hover:text-accent transition-all font-light rounded-lg"
        >
          Video souhrn
        </a>
      </div>
      <div class="flex flex-col sm:flex-row gap-2">
        <a 
          href={debataLabel && debataLabel !== 'Debata' ? '#debata' : '#article-audio-block'}
          class={`hidden sm:flex flex-1 items-center justify-center px-4 py-2.5 text-xs uppercase tracking-wider transition-all font-light rounded-lg ${debataLabel && debataLabel !== 'Debata' ? 'text-orange-400 border border-orange-500/70 hover:border-orange-400 hover:text-orange-300 bg-orange-500/10' : 'text-slate-300 border border-slate-700/50 hover:border-accent hover:text-accent'}`}
        >
          {debataLabel}
        </a>
        <a 
          href="#podporte-nas" 
          class="flex-1 text-center px-4 py-2.5 text-xs uppercase tracking-wider text-slate-300 border border-slate-700/50 hover:border-accent hover:text-accent transition-all font-light rounded-lg"
        >
          Podpořte nás
        </a>
      </div>
    </div>
  </div>
  
  <!-- Sources -->
  {sources.length > 0 && (
    <div class="mt-6 pt-6 border-t border-white/10">
      <h3 class="text-sm font-semibold text-slate-100 mb-2">Zdroje</h3>
      <ul class="space-y-1">
        {sources.map((source) => (
          <li class="text-xs text-slate-300 font-light line-clamp-2">
            {source.includes('http://') || source.includes('https://') ? (
              <a 
                href={source} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-accent hover:text-accent-light transition-colors underline decoration-accent/30 hover:decoration-accent break-all"
              >
                {source}
              </a>
            ) : (
              <span>{source}</span>
            )}
          </li>
        ))}
      </ul>
    </div>
  )}
</div>

<style>
  /* Serif font with better fallbacks */
  .font-serif {
    font-family: 'Georgia', 'Times New Roman', 'Times', serif;
    font-weight: 700;
    letter-spacing: -0.02em;
  }
  
  /* Smooth scroll for panel */
  .article-panel {
    scroll-behavior: smooth;
  }
  
  /* Fade-in animation */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .article-panel > * {
    animation: fadeInUp 0.6s ease-out;
  }
  
  .article-panel > header {
    animation-delay: 0.1s;
  }
  
  .article-panel > article {
    animation-delay: 0.2s;
  }
</style>

<script>
  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', () => {
      const readBtn = document.getElementById('read-article-btn');
      if (readBtn) {
        readBtn.addEventListener('click', () => {
          const articleContent = document.getElementById('article-content');
          if (articleContent) {
            articleContent.scrollIntoView({ 
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      }
    });
  }
</script>
