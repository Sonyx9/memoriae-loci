---
import { formatDate } from '../../lib/utils';
import { projects } from '../../lib/projects';

interface Props {
  title: string;
  excerpt?: string;
  publishedAt: string;
  project?: string;
  tags?: string[];
  readingTime?: number;
  author?: string;
  sources?: string[];
}

const { title, excerpt, publishedAt, project, tags = [], readingTime, author, sources = [] } = Astro.props;
const projectData = project ? projects.find(p => p.slug === project) : null;
---

<div class="p-8 md:p-12 lg:p-16 lg:pt-20 article-panel">
  <!-- Header -->
  <header class="mb-12 lg:mb-16">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif text-slate-100 leading-[0.95] mb-6 lg:mb-8 font-bold">
      {title}
    </h1>
    
    {excerpt && (
      <p class="text-base md:text-lg lg:text-xl text-slate-300 leading-relaxed mb-8 lg:mb-10 max-w-3xl font-light">
        {excerpt}
      </p>
    )}
    
    <!-- Meta Info -->
    <div class="space-y-4 mb-10 lg:mb-12">
      <div class="text-xs uppercase tracking-[0.25em] text-slate-400 font-light">
        <time datetime={publishedAt}>{formatDate(publishedAt)}</time>
        {readingTime && (
          <>
            <span class="mx-2">•</span>
            <span>{readingTime} min čtení</span>
          </>
        )}
      </div>
      
      {author && (
        <div class="text-sm text-slate-300 font-light">
          <span class="text-slate-400 mr-2">Autor:</span>
          {author}
        </div>
      )}
      
      {projectData && (
        <div class="text-xs uppercase tracking-[0.25em] text-slate-400 font-light">
          <a 
            href={`/projekty/${projectData.slug}`}
            class="text-accent hover:text-accent-light transition-colors underline decoration-accent/30 hover:decoration-accent"
          >
            {projectData.name}
          </a>
        </div>
      )}
      
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2 pt-2">
          {tags.map(tag => (
            <span class="px-3 py-1.5 bg-slate-800/30 border border-slate-700/50 text-slate-300 rounded text-xs uppercase tracking-[0.1em] font-light hover:border-slate-600 transition-colors">
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>
  </header>
  
  <!-- Footer CTA -->
  <div class="mt-16 lg:mt-20 pt-8 border-t border-white/10">
    <div class="flex flex-col sm:flex-row gap-3">
      <button 
        id="read-article-btn"
        class="flex-1 px-6 py-4 text-sm uppercase tracking-[0.15em] text-slate-50 bg-accent hover:bg-accent-light transition-all font-semibold rounded-lg"
      >
        Číst
      </button>
      <a 
        href="/podporte-nas" 
        class="flex-1 text-center px-6 py-3 text-sm uppercase tracking-[0.15em] text-slate-300 border border-slate-700/50 hover:border-accent hover:text-accent transition-all font-light rounded-lg"
      >
        Podpořte nás
      </a>
    </div>
  </div>
  
  <!-- Sources -->
  {sources.length > 0 && (
    <div class="mt-8 pt-8 border-t border-white/10">
      <h3 class="text-lg font-semibold text-slate-100 mb-4">Zdroje</h3>
      <ul class="space-y-2">
        {sources.map((source) => (
          <li class="text-sm text-slate-300 font-light">
            {source.includes('http://') || source.includes('https://') ? (
              <a 
                href={source} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-accent hover:text-accent-light transition-colors underline decoration-accent/30 hover:decoration-accent break-all"
              >
                {source}
              </a>
            ) : (
              <span>{source}</span>
            )}
          </li>
        ))}
      </ul>
    </div>
  )}
</div>

<style>
  /* Serif font with better fallbacks */
  .font-serif {
    font-family: 'Georgia', 'Times New Roman', 'Times', serif;
    font-weight: 700;
    letter-spacing: -0.02em;
  }
  
  /* Smooth scroll for panel */
  .article-panel {
    scroll-behavior: smooth;
  }
  
  /* Fade-in animation */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .article-panel > * {
    animation: fadeInUp 0.6s ease-out;
  }
  
  .article-panel > header {
    animation-delay: 0.1s;
  }
  
  .article-panel > article {
    animation-delay: 0.2s;
  }
</style>

<script>
  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', () => {
      const readBtn = document.getElementById('read-article-btn');
      if (readBtn) {
        readBtn.addEventListener('click', () => {
          const articleContent = document.getElementById('article-content');
          if (articleContent) {
            articleContent.scrollIntoView({ 
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      }
    });
  }
</script>
