---
interface Props {
  backUrl?: string;
}

const { backUrl = '/magazin' } = Astro.props;
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-slate-950/90 backdrop-blur-md border-b border-white/10 article-nav">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-14 lg:h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center group">
        <img 
          src="/images/logo.png" 
          alt="Memoriae Loci"
          class="h-7 lg:h-8 brightness-0 invert transition-opacity group-hover:opacity-80"
        />
      </a>
      
      <!-- Desktop Actions -->
      <div class="hidden lg:flex items-center gap-6">
        <!-- Share Button -->
        <button 
          id="share-btn"
          class="text-slate-300 hover:text-accent transition-colors p-2 -mr-2 focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-slate-950 rounded"
          aria-label="Sdílet článek"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
          </svg>
        </button>
        
        <!-- Close/Back Button -->
        <a 
          href={backUrl}
          class="text-slate-300 hover:text-accent transition-colors text-2xl leading-none w-8 h-8 flex items-center justify-center focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-slate-950 rounded"
          aria-label="Zpět na seznam článků"
        >
          ×
        </a>
      </div>
      
      <!-- Mobile Actions -->
      <div class="lg:hidden flex items-center gap-3">
        <!-- Share Button (Mobile) -->
        <button 
          id="share-btn-mobile"
          class="text-slate-300 hover:text-accent transition-colors p-2 focus:outline-none focus:ring-2 focus:ring-accent rounded"
          aria-label="Sdílet článek"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
          </svg>
        </button>
        
        <!-- Hamburger Menu (Mobile) -->
        <button 
          id="mobile-menu-btn"
          class="text-slate-300 hover:text-accent transition-colors p-2 focus:outline-none focus:ring-2 focus:ring-accent rounded"
          aria-label="Menu"
          aria-expanded="false"
        >
          <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Menu Dropdown -->
  <div id="mobile-menu" class="lg:hidden hidden bg-slate-950/98 backdrop-blur-md border-t border-white/10">
    <div class="container mx-auto px-4 py-4 space-y-1">
      <a 
        href={backUrl}
        class="block px-4 py-3 text-slate-300 hover:text-accent hover:bg-slate-900/50 rounded transition-colors text-sm uppercase tracking-wide"
      >
        ← Zpět na magazín
      </a>
      <a 
        href="/"
        class="block px-4 py-3 text-slate-300 hover:text-accent hover:bg-slate-900/50 rounded transition-colors text-sm uppercase tracking-wide"
      >
        Hlavní stránka
      </a>
      <a 
        href="/projekty"
        class="block px-4 py-3 text-slate-300 hover:text-accent hover:bg-slate-900/50 rounded transition-colors text-sm uppercase tracking-wide"
      >
        Projekty
      </a>
      <a 
        href="/nase-vize"
        class="block px-4 py-3 text-slate-300 hover:text-accent hover:bg-slate-900/50 rounded transition-colors text-sm uppercase tracking-wide"
      >
        Naše vize
      </a>
    </div>
  </div>
</nav>

<style>
  .article-nav {
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }
</style>

<script>
  // Mobile menu toggle
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  
  if (menuBtn && mobileMenu) {
    menuBtn.addEventListener('click', () => {
      const isOpen = !mobileMenu.classList.contains('hidden');
      
      if (isOpen) {
        mobileMenu.classList.add('hidden');
        menuIcon?.classList.remove('hidden');
        closeIcon?.classList.add('hidden');
        menuBtn.setAttribute('aria-expanded', 'false');
      } else {
        mobileMenu.classList.remove('hidden');
        menuIcon?.classList.add('hidden');
        closeIcon?.classList.remove('hidden');
        menuBtn.setAttribute('aria-expanded', 'true');
      }
    });
  }
  
  // Share functionality
  function setupShare(btnId: string) {
    const shareBtn = document.getElementById(btnId);
    if (!shareBtn) return;
    
    const shareIcon = shareBtn.querySelector('svg')?.outerHTML || '';
    
    if (navigator.share) {
      shareBtn.addEventListener('click', async () => {
        try {
          await navigator.share({
            title: document.title,
            text: document.querySelector('meta[name="description"]')?.content || '',
            url: window.location.href,
          });
        } catch (err) {
          // User cancelled or error - do nothing
        }
      });
    } else {
      // Fallback: copy to clipboard
      shareBtn.addEventListener('click', () => {
        navigator.clipboard.writeText(window.location.href).then(() => {
          const originalHTML = shareBtn.innerHTML;
          shareBtn.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" /></svg>';
          shareBtn.classList.add('text-accent');
          setTimeout(() => {
            shareBtn.innerHTML = originalHTML;
            shareBtn.classList.remove('text-accent');
          }, 2000);
        });
      });
    }
  }
  
  setupShare('share-btn');
  setupShare('share-btn-mobile');
</script>
